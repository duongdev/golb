{
  "name": "server",
  "version": "0.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node ./dist/bin/www",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist/bin/www",
    "dev": "NODE_ENV=development npm-run-all build server",
    "prod": "NODE_ENV=production npm-run-all build server",
    "transpile": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "watch:dev": "PORT=4000 DEBUG=server:* env-cmd nodemon",
    "test": "jest"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "regenerator": true
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "src/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "axios": "0.21.1",
    "bcrypt": "5.0.0",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "debug": "4.1.1",
    "env-cmd": "10.1.0",
    "express": "4.17.1",
    "jsonwebtoken": "8.5.1",
    "mongoose": "5.9.27",
    "mongoose-paginate-v2": "1.3.9",
    "mongoose-slug-plugin": "2.0.4",
    "morgan": "1.10.0",
    "swagger-jsdoc": "4.0.0",
    "swagger-ui-express": "4.1.4",
    "yamljs": "0.3.0",
    "yup": "0.29.3"
  },
  "devDependencies": {
    "@babel/cli": "7.10.5",
    "@babel/core": "7.11.0",
    "@babel/plugin-transform-runtime": "7.11.0",
    "@babel/preset-env": "7.11.0",
    "@types/jest": "26.0.9",
    "dotenv": "8.2.0",
    "jest": "26.2.2",
    "mongodb-memory-server": "6.6.3",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "rimraf": "3.0.2",
    "supertest": "4.0.2"
  }
}
